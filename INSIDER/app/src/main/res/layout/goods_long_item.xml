<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/goods"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="1dp"
        android:background="@drawable/gray30_round_18_rectangle"
        app:cardCornerRadius="18dp"
        app:cardElevation="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/goodsImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/onion" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/gradientLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/item_background_gradient"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/itemWeightOrRest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(200g)"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/itemName"
                    app:layout_constraintEnd_toStartOf="@+id/itemPrice"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/itemName"
                    app:layout_constraintTop_toTopOf="@+id/itemName" />

                <TextView
                    android:id="@+id/itemDiscountRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    tools:text="20%"
                    android:textColor="@color/red"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/itemName"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/gradientLayout" />

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,000원"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/itemWeightOrRest"
                    app:layout_constraintEnd_toStartOf="@+id/unit"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@+id/itemWeightOrRest"
                    app:layout_constraintTop_toTopOf="@+id/itemWeightOrRest" />


                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(개당)"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/itemPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/itemPrice"
                    app:layout_constraintTop_toTopOf="@+id/itemPrice" />

                <TextView
                    android:id="@+id/itemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="양파"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintBottom_toBottomOf="@+id/itemDiscountRate"
                    app:layout_constraintEnd_toStartOf="@id/itemWeightOrRest"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@id/itemDiscountRate"
                    app:layout_constraintTop_toTopOf="@+id/itemDiscountRate" />

                <TextView
                    android:id="@+id/salePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sdsamliphopangchettfoutline"
                    android:text="2,400원"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/itemPrice"
                    app:layout_constraintEnd_toEndOf="@id/itemPrice"
                    app:layout_constraintBottom_toTopOf="@id/itemPrice"/>

                <ImageView
                    android:id="@+id/arrowImg"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:src="@drawable/cancellationline"
                    android:layout_marginBottom="3dp"
                    app:layout_constraintStart_toStartOf="@id/itemPrice"
                    app:layout_constraintEnd_toEndOf="@id/itemPrice"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

    </androidx.cardview.widget.CardView>

</layout>